@{
    ViewBag.Title = "_modalAgregarProveedor";
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <div class="col-lg-12">
        <h3 class="modal-title" id="exampleModalLabel">Agregar Proveedor</h3>
    </div>
</div>
<div class="modal-body">
    <div class="row">
        <form>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Label("labelCodigoPersona", "Código de Persona:", new { @class = "col-md-3 h4" })
                    <h4 class="col-md-5">P0001</h4>
                    @Html.Label("labelFecha", "Fecha:", new { @class = "col-md-2 h4" })
                    <h4 class="col-md-2">10/11/2016</h4>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Label("labelNaturalez", "Naturaleza:", new { @class = "col-md-3 h4" })
                    <div class="col-md-3">
                        <select class="form-control">
                            <option>Juridica</option>
                        </select>
                    </div>
                    @Html.Label("labelTipoPersona", "Tipo de Persona:", new { @class = "col-md-3 h4" })
                    <div class="col-md-3">
                        <select class="form-control">
                            <option>Seleccionar</option>
                            <option>Proveedor</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Label("labelNombres", "Nombres :", new { @class = "col-md-2 h4" })
                    <div class="col-md-4">
                        <input class="form-control input-sm" type="text" placeholder="Nombre Completo">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Label("labelNDocumento", "N° Documento:", new { @class = "col-md-3 h4" })
                    <div class="col-md-3">
                        <input class="form-control input-sm" type="text" placeholder="Nombre Completo">
                    </div>
                    @Html.Label("labelTelefono", "Teléfono:", new { @class = "col-md-2 h4" })
                    <div class="col-md-4">
                        <input class="form-control input-sm" type="text" placeholder="Teléfono:">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <form>
                    @Html.Label("labelWebCorreo", "Dirección Web o Correo Electrónico :", new { @class = "col-md-6 h4" })
                    @Html.Label("labelDomicilio", "Dirección de Domicilio :", new { @class = "col-md-6 h4" })
                </form>
            </div>
            <div class="col-md-12">
                <form>
                    <div class="col-md-6">
                        <input class="form-control input-sm" type="text">
                    </div>
                    <div class="col-md-6">
                        <input class="form-control input-sm" type="text">
                    </div>
                </form>
            </div>


        </form>
    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-info">Grabar</button>
    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
</div>